.modificator
	padding 10px
	color #fff
	background linear-gradient(330deg, alpha(#666, 100%), alpha(#999, 100%))
	font-size 28px
	display flex
	align-items center
	justify-content center
	user-select none

	&:first-child
		border-top-left-radius 50%
		border-bottom-left-radius 50%

	&:last-child
		border-top-right-radius 50%
		border-bottom-right-radius 50%

	@media screen and (max-width: 680px)
		padding 3px
		font-size 20px

	@media screen and (max-width: 400px)
		padding 1px
		font-size 18px

	&:hover
		cursor pointer
		background linear-gradient(330deg, alpha(#444, 100%), alpha(#666, 100%))
