.history-controls
	margin-top 10px
	display flex

	&__element
		padding 5px
		border 2px solid #999
		border-radius 10px
		tr()

		&:hover
			background-color alpha(#fff, 20%)
			border 2px solid alpha(#fff, 80%)
			cursor pointer

		div
			image-bg('icons/back.svg')
			height 50px
			width 60px


		&--forward
			margin-left 10px
			div
				transform scale(1, -1) rotate(180deg)
